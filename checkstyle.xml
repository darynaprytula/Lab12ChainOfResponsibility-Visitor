<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- ========================================= -->
    <!-- GLOBAL RULES (Checker level)               -->
    <!-- ========================================= -->

    <!-- Max line length -->
    <module name="LineLength">
        <property name="max" value="100"/>
        <property name="ignorePattern" value="^package|^import"/>
    </module>

    <!-- No trailing whitespace -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Trailing whitespace is forbidden."/>
    </module>

    <!-- File must end with a newline -->
    <module name="NewlineAtEndOfFile"/>

    <!-- No tabs -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Comments forbidden -->
    <module name="RegexpSingleline">
        <property name="format" value="//"/>
        <property name="message" value="Comments are forbidden."/>
    </module>

    <module name="RegexpMultiline">
        <property name="format" value="/\*"/>
        <property name="message" value="Block comments are forbidden."/>
    </module>

    <!-- ========================================= -->
    <!-- TREEWALKER (Java AST checks)               -->
    <!-- ========================================= -->

    <module name="TreeWalker">

        <!-- FORBID: wildcard imports -->
        <module name="AvoidStarImport"/>

        <!-- FORBID unused imports -->
        <module name="UnusedImports"/>

        <!-- Naming -->
        <module name="TypeName"/>
        <module name="MethodName"/>
        <module name="LocalVariableName"/>
        <module name="MemberName"/>

        <!-- Formatting -->
        <module name="NeedBraces"/>
        <module name="WhitespaceAround"/>
        <module name="WhitespaceAfter"/>

        <!-- Indentation -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Optional: limit long methods -->
        <module name="MethodLength">
            <property name="max" value="80"/>
        </module>

    </module>
</module>
